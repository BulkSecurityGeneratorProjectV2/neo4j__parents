<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>parent-pom</artifactId>
    <groupId>org.neo4j</groupId>
    <version>7-SNAPSHOT</version>
  </parent>
  <groupId>org.neo4j.assembly</groupId>
  <artifactId>assembly-pom</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>Assembly pom</name>
  <description>Modifies parent pom for assemblies.</description>

  <distributionManagement>
    <snapshotRepository>
      <id>snapshots@repo.neo4j.org</id>
      <name>snapshots@repo.neo4j.org</name>
      <uniqueVersion>false</uniqueVersion>
      <url>https://repo.neo4j.org/content/repositories/snapshots</url>
    </snapshotRepository>
  </distributionManagement>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-release-plugin</artifactId>
        <configuration>
          <tagBase>https://svn.neo4j.org/assemblies/${short-name}/tags</tagBase>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>get-javadoc-sources</id>
            <inherited>true</inherited>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <classifier>sources</classifier>
              <outputDirectory>${project.build.directory}/sources
              </outputDirectory>
              <includeGroupIds>org.neo4j</includeGroupIds>
              <!-- neo4j-apoc has no sources -->
              <!-- neo4j-shell isn't what users look for here -->
              <excludeArtifactIds>neo4j-apoc,neo4j-shell
              </excludeArtifactIds>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
        <executions>
          <execution>
            <id>create-javadocs</id>
            <inherited>true</inherited>
            <phase>prepare-package</phase>
            <goals>
              <goal>javadoc</goal>
            </goals>
            <configuration>
              <sourcepath>${project.build.directory}/sources
              </sourcepath>
              <detectLinks>true</detectLinks>
              <links>
                <!-- the java api link won't be found automatically -->
                <link>http://java.sun.com/j2se/1.5.0/docs/api/</link>
              </links>
              <excludePackageNames>*.impl.*:org.neo4j.shell:org.neo4j.remote.inspect</excludePackageNames>
              <groups>
                <group>
                  <title>Graph database</title>
                  <packages>org.neo4j.kernel:org.neo4j.graphdb:org.neo4j.kernel.*:org.neo4j.graphdb.*
                  </packages>
                </group>
                <group>
                  <title>Index</title>
                  <packages>org.neo4j.index:org.neo4j.index.*</packages>
                </group>
                <group>
                  <title>Graph algorithms</title>
                  <packages>org.neo4j.graphalgo:org.neo4j.graphalgo.*</packages>
                </group>
                <group>
                  <title>Online backup</title>
                  <packages>org.neo4j.onlinebackup:org.neo4j.onlinebackup.*</packages>
                </group>
                <group>
                  <title>Remote</title>
                  <packages>org.neo4j.remote:org.neo4j.remote.*</packages>
                </group>
                <group>
                  <title>Helpers</title>
                  <packages>org.neo4j.helpers:org.neo4j.helpers.*
                  </packages>
                </group>
              </groups>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-source-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-source</id>
            <phase>none</phase>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
