<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>parent-pom</artifactId>
    <groupId>org.neo4j</groupId>
    <version>8</version>
  </parent>
  <groupId>org.neo4j.assembly</groupId>
  <artifactId>assembly-pom</artifactId>
  <version>3-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>Assembly pom</name>
  <description>Modifies parent pom for assemblies.</description>
  
  <properties>
    <short-name>assembly-pom</short-name>
  </properties>
  
  <scm>
    <connection>scm:svn:https://svn.neo4j.org/assemblies/assembly-pom/trunk</connection>
    <developerConnection>scm:svn:https://svn.neo4j.org/assemblies/assembly-pom/trunk</developerConnection>
    <url>https://trac.neo4j.org/browser/assemblies/assembly-pom/trunk</url>
  </scm>

  <distributionManagement>
    <snapshotRepository>
      <id>snapshots@repo.neo4j.org</id>
      <name>snapshots@repo.neo4j.org</name>
      <uniqueVersion>false</uniqueVersion>
      <url>https://repo.neo4j.org/content/repositories/snapshots</url>
    </snapshotRepository>
    <site>
      <id>neo4j-site</id>
      <url>scpexe://components.neo4j.org/home/neo/components</url>
    </site>
  </distributionManagement>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-release-plugin</artifactId>
        <configuration>
          <tagBase>https://svn.neo4j.org/assemblies/${short-name}/tags</tagBase>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>get-javadoc-sources</id>
            <phase>generate-sources</phase>
            <inherited>true</inherited>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <classifier>sources</classifier>
              <outputDirectory>${project.build.directory}/sources
              </outputDirectory>
              <includeGroupIds>org.neo4j</includeGroupIds>
              <!-- neo4j-apoc has no sources -->
              <!-- neo4j-shell or neo4j-udc isn't what users look for here -->
              <excludeArtifactIds>neo4j,neo4j-apoc,neo4j-shell,neo4j-udc
              </excludeArtifactIds>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
        <executions>
          <execution>
            <id>create-javadocs</id>
            <inherited>true</inherited>
            <phase>prepare-package</phase>
            <goals>
              <goal>javadoc</goal>
            </goals>
            <configuration>
              <sourcepath>
                ${project.build.directory}/sources
              </sourcepath>
              <reportOutputDirectory>${project.build.directory}/apidocs
              </reportOutputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>attach-javadocs</id>
            <phase>none</phase>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-source-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-source</id>
            <phase>none</phase>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <reporting>
    <plugins>
      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
        <reportSets>
          <reportSet>
            <id>javadoc-aggregated-report</id>
            <reports>
              <report>aggregate</report>
            </reports>
            <configuration>
              <destDir>apidocs</destDir>
              <sourcepath>${project.build.directory}/sources</sourcepath>
            </configuration>
          </reportSet>
        </reportSets>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>clirr-maven-plugin</artifactId>
        <reportSets>
          <reportSet />
        </reportSets>
      </plugin>
    </plugins>
  </reporting>

  <profiles>
    <profile>
      <id>upload-to-dist-server</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>wagon-maven-plugin</artifactId>
            <groupId>org.codehaus.mojo</groupId>
            <version>1.0-beta-3</version>
            <configuration>
              <fromDir>${project.build.directory}</fromDir>
              <url>scpexe://dist-server</url>
              <toDir>$HOME/public_html/dist</toDir>
              <includes>*.zip,*.tar.gz</includes>
            </configuration>
            <executions>
              <execution>
                <id>upload-to-dist-server</id>
                <goals>
                  <goal>upload</goal>
                </goals>
                <phase>deploy</phase>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

</project>
