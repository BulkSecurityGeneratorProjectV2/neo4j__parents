<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.sonatype.oss</groupId>
    <artifactId>oss-parent</artifactId>
    <version>5</version>
  </parent>
  <groupId>org.neo4j.maven</groupId>
  <artifactId>licenses</artifactId>
  <version>1-SNAPSHOT</version>
  <name>Licenses</name>
  <description>Open Source Licenses and Headers used by the Neo4j project.</description>
  <packaging>jar</packaging>
  <url>http://components.neo4j.org/${project.artifactId}</url>

  <properties>
    <short-name>licenses</short-name>
  </properties>

  <scm>
    <connection>scm:svn:https://svn.neo4j.org/community/licenses/trunk</connection>
    <developerConnection>scm:svn:https://svn.neo4j.org/community/licenses/trunk</developerConnection>
    <url>https://trac.neo4j.org/browser/community/licenses</url>
  </scm>

  <licenses>
    <license>
      <name>Apache License Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
    </license>
  </licenses>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-release-plugin</artifactId>
        <configuration>
          <tagBase>https://svn.neo4j.org/community/${short-name}/tags</tagBase>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <developers>
    <developer>
      <id>andersn</id>
      <name>Anders Nawroth</name>
      <email>anders [at] neotechnology.com</email>
      <timezone>+1</timezone>
      <roles>
        <role>Developer</role>
      </roles>
    </developer>
  </developers>

</project>

